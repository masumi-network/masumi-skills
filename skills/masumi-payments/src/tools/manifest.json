{
  "tools": [
    {
      "name": "masumi_install_payment_service",
      "description": "Install masumi-payment-service locally. Clones the repository and installs dependencies.",
      "parameters": {
        "type": "object",
        "properties": {
          "installPath": {
            "type": "string",
            "description": "Path to install service (default: ~/.masumi/payment-service)"
          },
          "network": {
            "type": "string",
            "enum": ["Preprod", "Mainnet"],
            "default": "Preprod",
            "description": "Cardano network"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "serviceUrl": "string",
        "installPath": "string",
        "network": "string",
        "status": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_start_payment_service",
      "description": "Start the payment service and check if it's running",
      "parameters": {
        "type": "object",
        "properties": {
          "installPath": {
            "type": "string",
            "description": "Path where service is installed"
          },
          "serviceUrl": {
            "type": "string",
            "description": "Service URL to check (default: http://localhost:3000/api/v1)"
          },
          "network": {
            "type": "string",
            "enum": ["Preprod", "Mainnet"],
            "default": "Preprod"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "running": "boolean",
        "serviceUrl": "string",
        "healthCheck": "object",
        "message": "string"
      }
    },
    {
      "name": "masumi_generate_api_key",
      "description": "Generate an API key via payment service API",
      "parameters": {
        "type": "object",
        "properties": {
          "serviceUrl": {
            "type": "string",
            "description": "Payment service URL (default: http://localhost:3000/api/v1)"
          },
          "adminKey": {
            "type": "string",
            "description": "Admin key from payment service config (optional)"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "apiKey": "string",
        "serviceUrl": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_enable",
      "description": "Enable Masumi payments for this AI agent. Auto-provisions a Cardano wallet and registers the agent on Masumi network.",
      "parameters": {
        "type": "object",
        "properties": {
          "agentName": {
            "type": "string",
            "description": "Display name for your agent (optional, auto-generated if not provided)"
          },
          "description": {
            "type": "string",
            "description": "Description of what your agent does"
          },
          "pricingTier": {
            "type": "string",
            "enum": ["free", "basic", "premium"],
            "default": "free",
            "description": "Pricing tier: free (no charge), basic (1 ADA), premium (5 ADA)"
          },
          "installService": {
            "type": "boolean",
            "default": false,
            "description": "Automatically install payment service if not configured"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "agentIdentifier": "string",
        "walletAddress": "string",
        "registryUrl": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_create_payment",
      "description": "Create a payment request for work to be done. Returns a blockchain identifier that the buyer uses to pay.",
      "parameters": {
        "type": "object",
        "properties": {
          "buyerIdentifier": {
            "type": "string",
            "description": "Unique identifier from the buyer (14-26 character hex string)"
          },
          "taskDescription": {
            "type": "string",
            "description": "Description of the work to be done"
          },
          "inputData": {
            "type": "object",
            "description": "Structured input data for the task (will be hashed per MIP-004)"
          },
          "payByHours": {
            "type": "number",
            "default": 12,
            "description": "Hours until payment deadline (default: 12)"
          },
          "submitResultHours": {
            "type": "number",
            "default": 24,
            "description": "Hours until result submission deadline (default: 24)"
          },
          "metadata": {
            "type": "string",
            "description": "Optional private metadata"
          }
        },
        "required": ["buyerIdentifier", "taskDescription"]
      },
      "returns": {
        "success": "boolean",
        "blockchainIdentifier": "string",
        "payByTime": "string",
        "submitResultTime": "string",
        "state": "string",
        "requestedFunds": "array",
        "message": "string"
      }
    },
    {
      "name": "masumi_check_payment",
      "description": "Check the status of a payment. Use this to see if the buyer has paid.",
      "parameters": {
        "type": "object",
        "properties": {
          "blockchainIdentifier": {
            "type": "string",
            "description": "The payment identifier returned from masumi_create_payment"
          }
        },
        "required": ["blockchainIdentifier"]
      },
      "returns": {
        "success": "boolean",
        "blockchainIdentifier": "string",
        "state": "string",
        "nextAction": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_complete_payment",
      "description": "Submit work result and complete the payment. Call this after you finish the work and the payment state is 'FundsLocked'.",
      "parameters": {
        "type": "object",
        "properties": {
          "blockchainIdentifier": {
            "type": "string",
            "description": "The payment identifier"
          },
          "resultData": {
            "type": ["object", "string"],
            "description": "The work result (will be hashed per MIP-004)"
          }
        },
        "required": ["blockchainIdentifier", "resultData"]
      },
      "returns": {
        "success": "boolean",
        "blockchainIdentifier": "string",
        "state": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_wallet_balance",
      "description": "Get your wallet balance in ADA and lovelace.",
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "returns": {
        "success": "boolean",
        "ada": "number",
        "lovelace": "string",
        "tokens": "array",
        "message": "string"
      }
    },
    {
      "name": "masumi_list_payments",
      "description": "List your payment history with pagination.",
      "parameters": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "number",
            "default": 10,
            "description": "Maximum number of payments to return"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "payments": "array",
        "count": "number",
        "nextCursorId": "string",
        "message": "string"
      }
    },
    {
      "name": "masumi_search_agents",
      "description": "Search for other agents on the Masumi network by capability, pricing, or tags.",
      "parameters": {
        "type": "object",
        "properties": {
          "capability": {
            "type": "string",
            "description": "Filter by capability name (e.g., 'data-analysis', 'image-generation')"
          },
          "pricingType": {
            "type": "string",
            "enum": ["Fixed", "Variable", "Free"],
            "description": "Filter by pricing type"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Filter by tags"
          },
          "limit": {
            "type": "number",
            "default": 10,
            "description": "Maximum number of agents to return"
          }
        }
      },
      "returns": {
        "success": "boolean",
        "agents": "array",
        "count": "number",
        "message": "string"
      }
    },
    {
      "name": "masumi_get_agent",
      "description": "Get detailed information about a specific agent.",
      "parameters": {
        "type": "object",
        "properties": {
          "agentIdentifier": {
            "type": "string",
            "description": "The agent identifier"
          }
        },
        "required": ["agentIdentifier"]
      },
      "returns": {
        "success": "boolean",
        "agent": "object",
        "message": "string"
      }
    }
  ]
}
